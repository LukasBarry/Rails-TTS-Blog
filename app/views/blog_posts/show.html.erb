<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading">
    <%= @blog_post.title %>
  </div>
  <div class="panel-body">
    <p><%= @blog_post.created_at %></p>
    <p>by <%= @blog_post.author %></p>
    <p><%= @blog_post.blog_entry %></p>
  </div>
</div>

<div class="panel panel-success">
  <div class="panel-heading">
    Make a Comment
  </div>
  <div class="panel-body">
    <%= render "comments/form" %>
  </div>
</div>

<div class="comments">
  <div class="panel-default">
    <div class="panel-header">
      <h4>Comments</h4>
    </div>
    <% @blog_post.comments.each do |comment| %>
    <div class="panel-body">
      <p><%= comment.created_at %></p>
      <p><strong><%= comment.author %></strong> said:</p>
      <p><%= comment.comment_entry %></p>
    </div>
    <% end %>
  </div>
</div>

<div class="buttons">
  <%= link_to 'Edit', edit_blog_post_path(@blog_post), class: "btn btn-primary" %> |
  <%= link_to 'Back', blog_posts_path, class: "btn btn-default" %>
</div>
